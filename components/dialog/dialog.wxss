/*动画*/
.dialog-act-in{
  animation: dialog-act-in .1s ease;
  animation-fill-mode: forwards;
}
@keyframes dialog-act-in {
  0%{height: 0;}
  100%{height: 100vh;}
}

.dialog-act-out{
  animation: dialog-act-out 0.1s ease;
  animation-fill-mode: forwards;
}
@keyframes dialog-act-out {
  0%{height: 100vh;}
  100%{height: 0;}
}
/*动画结束*/

.dialog {
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 0;
  overflow: hidden;
}
.dialog-outter {
  position: relative;
  left: 10vw;
  top: 15vh;
  width: 80vw;
  max-height: 70vh;
  overflow-y: auto;
  background-color: #fff;
}
.dislog-close{
  position: absolute;
  top: calc(15vh - 10px);
  left: calc(10vw - 10px);
  width: 20px;
  height: 20px;
  text-align: center;
  background-color: #555;
  color: #fff;
}
.dialog-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
}
