/*动画*/
.mes-act-in{
  animation: mes-act-in .5s ease;
  animation-fill-mode: forwards;
}
@keyframes mes-act-in {
  0%{top: -90px;}
  100%{top: 0;}
}

.mes-act-out{
  animation: mes-act-out .5s ease;
  animation-fill-mode: forwards;
}
@keyframes mes-act-out {
  0%{top: 0;}
  100%{top: -90px;}
}
/*动画结束*/

.mes-actor-dancer {
  z-index:100;
  position:fixed;
  left: 0;
  top: -90px;
  width: 100%;
  height: 70px;
  line-height:70px;
  background-color:#fff;
  box-shadow:0 2px 10px 1px #999;
  text-align:center;
  font-size:.8rem;
}