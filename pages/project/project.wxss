.project-con {
  padding-bottom: calc(2.4rem + 30px + 10px);
}

.project-title {
  font-size: 22px;
  line-height: 22px;
}

.cover-con {
  margin: 15px 0;
}

.project-intro {
  font-size: .8rem;
}
.project-intro-item {
  display: flex;
  margin-bottom: 5px;
}
.checkPlace {
  text-decoration: underline;
  font-weight: bold;
}

.project-intro-booked-headImgs {
  overflow-x: scroll;
  margin: 1rem 0;
}
.project-intro-booked-headImgs view {
  box-sizing: border-box;
  padding-left: 15px;
  white-space: nowrap;
  font-size: 0;
}
.project-intro-booked-headImgs image {
  display: inline-block;
  height: 3rem;
  width: 3rem;
  border-radius: 3rem;
  margin-right: 1rem;
  background-color: #eee;
}
.dialog-title .project-intro-item {
  padding: 15px 15px 0;
}
.dialog-con {
  box-sizing: border-box;
  padding: 0 15px 30px;
}
.dialog-inner-item {
  display: inline-block;
  width: 25%;
  text-align: center;
  margin-top: 25px;
}
.dialog-inner-item image {
  width: 2.5rem;
  border-radius: 2.5rem;
  background-color: #eee;
}

.project-intro-level {
  width: calc(100% - 30px);
  margin-left: 15px;
  box-sizing: border-box;
  padding-left: 7px;
  border: 2px solid #333;
  line-height: 1.7rem;
  background-color: #eee;
  color: #333;
}
.project-intro-level image {
  height: .8rem;
  width: .8rem;
  margin-right: 3px;
}

.content-con {
  margin: 1rem 0;
}

.positionBottom {
  position: fixed;
  bottom: 15px;
  left: 15px;
}

.btn {
  width: calc(100% - 30px);
  font-size: .8rem;
  line-height: 2.4rem;
  text-align: center;
}
.btn-block {
  background-color: #333;
  color: #fff;
}
.btn-white {
  background-color: #fff;
  color: #333;
}

.cancel-book-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
}
.cancel-option-con {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 15px 15px 5px;
  font-size: .8rem;
  overflow: hidden;
}
.cancel-option-con .btn {
  width: 100%;
}
