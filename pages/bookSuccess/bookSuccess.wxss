/* pages/bookSuccess/bookSuccess.wxss */
text {
  font-size: 1.5rem;
  color: #333;
}

.info-class-list-con,
.info-book-list-con {
  margin: 1.5rem 0;
}
.info-list-item {
  font-size: .8rem;
  line-height: 1.2rem;
  color: #666;
}
.info-list-title{
  font-size: 22px;
}
image {
  width: 0.8rem;
  height: 0.8rem;
  margin-right: 3px;
}

.positionBottom {
  position: absolute;
  bottom: 15px;
}

.btn {
  width: calc(100% - 30px);
  font-size: .8rem;
  line-height: 2.4rem;
  text-align: center;
}
.btn-block {
  background-color: #333;
  color: #fff;
}
.btn-white {
  background-color: #fff;
  color: #333;
}

.cancel-book-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
}
.cancel-option-con {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding:0 15px 5px;
  font-size: .8rem;
  overflow: hidden;
}
.cancel-option-con .btn {
  width: 100%;
}
.warn-text {
  margin: 2rem 0;
  text-align: center;
}
