.ticket-inner {
  box-sizing: border-box;
  padding: 0 15px calc(15px + 4.8rem);
}

.ticket-title {
  font-size: 22px;
}

.ticket-cover {
  position: relative;
  margin: 1rem 0;
  width: 100%;
  height: 200px;
  box-shadow: 0 0 10px 5px #d8d8d8;
}

.ticket-cover > image {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.ticket-cover-center,
.ticket-cover-bottom {
  position: absolute;
  box-sizing: border-box;
  padding: 0 10px;
}
.ticket-cover-center {
  top: 25%;
  left: 0;
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-flow: wrap;
}
.ticket-cover-center-title {
  position:relative;
  left:-3px;
  width: 100%;
  color: #fff;
  font-size:50px;
  line-height: 50px;
  font-weight:bold;
}
.ticket-cover-center-time {
  color: #dddddd;
}

.ticket-cover-bottom {
  bottom: 10px;
  height: 10%;
  width: 100%;
  line-height: 1;
}
.ticket-cover-bottom image {
  height:20px;
  width:60%;
}
.ticket-cover-bottom-num {
  width:40%;
  color:#999;
  font-size:.9em;
  display:inline-block;
  text-align: right;
}

.ticket-btn-con {
  position: fixed;
  bottom: 15px;
  left: 15px;
  width: calc(100% - 30px);
}

.ticket-btn {
  width: 100%;
  font-size: .8rem;
  line-height: 2.4rem;
  text-align: center;
}
.ticket-btn-ensure {
  background-color: #353535;
  color: #fff;
}
.ticket-btn-book {
  background-color: #fff;
  color: #353535;
}
